<h2 class="mb-3">New Batch</h2>

<%= form_with model: @batch,
              url: school_admin_batches_path,
              local: true do |f| %>

  <div class="mb-3">
    <%= f.label :course_id, "Course", class: "form-label" %>
    <%= f.collection_select :course_id,
                            @courses,
                            :id,
                            :name,
                            { prompt: "Select Course" },
                            class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :name, "Batch Name", class: "form-label" %>
    <%= f.text_field :name,
                     class: "form-control",
                     placeholder: "e.g. Batch A" %>
  </div>

  <%= f.submit "Create Batch", class: "btn btn-primary" %>

<% end %>
