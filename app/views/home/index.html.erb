<h2 class="mb-4">
  Welcome, <%= current_user.email %>
</h2>

<% if current_user.admin? %>
  <div class="row g-3">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5>Schools</h5>
          <p>Manage all schools</p>
          <%= link_to "Manage Schools",
                      admin_schools_path,
                      class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>

<% elsif current_user.school_admin? %>
  <div class="row g-3">

    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h5>School</h5>
          <p>Edit school details</p>
          <%= link_to "Edit School",
                      edit_school_admin_school_path(current_user.school),
                      class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h5>Students</h5>
          <p>Add & manage students</p>
          <%= link_to "Manage Students",
                      school_admin_students_path,
                      class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h5>Courses</h5>
          <p>Create & manage courses</p>
          <%= link_to "Manage Courses",
                      school_admin_courses_path,
                      class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h5>Enrollments</h5>
          <p>Approve or reject requests</p>
          <%= link_to "Enrollment Requests",
                      school_admin_enrollments_path,
                      class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h5>Batches</h5>
          <p>View batches & assign students</p>
          <%= link_to "Manage Batches",
                      school_admin_batches_path,
                      class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>

  </div>

<% elsif current_user.student? %>
  <div class="row g-3">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5>My Enrollments</h5>
          <p>View and request enrollments</p>
          <%= link_to "My Enrollments",
                      enrollments_path,
                      class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
